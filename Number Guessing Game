#include <iostream>
#include <cstdlib>   // for rand() and srand()
#include <ctime>     // for time()

using namespace std;

int main() {
    int numberToGuess, userGuess, attempts = 0;
    const int MAX_TRIES = 10;

    // Initialize random seed
    srand(time(0));
    numberToGuess = rand() % 100 + 1;  // Random number between 1 and 100

    cout << "ðŸŽ¯ Welcome to the Number Guessing Game!\n";
    cout << "I'm thinking of a number between 1 and 100.\n";
    cout << "You have " << MAX_TRIES << " attempts to guess it correctly.\n\n";

    while (attempts < MAX_TRIES) {
        cout << "Enter your guess: ";
        cin >> userGuess;
        attempts++;

        if (userGuess == numberToGuess) {
            cout << "ðŸŽ‰ Congratulations! You guessed the number in " << attempts << " attempts.\n";
            break;
        } else if (userGuess < numberToGuess) {
            cout << "ðŸ“‰ Too low! Try a higher number.\n";
        } else {
            cout << "ðŸ“ˆ Too high! Try a lower number.\n";
        }
    }

    if (userGuess != numberToGuess) {
        cout << "\nðŸ˜ž You've used all " << MAX_TRIES << " attempts.\n";
        cout << "The correct number was: " << numberToGuess << "\n";
    }

    cout << "Thanks for playing! ðŸ‘‹\n";
    return 0;
}
